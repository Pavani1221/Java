public class hdn 
{
    public static void main(String args[])
    {
    int n=4;
    int i,j;
    for(i=1;i<=n;i++)
    {
    for(j=1;j<=i;j++)
    {
        System.out.print(i);
    }
    System.out.println();
    if(i==n)
    break;
    }
    for(i=n-1;i>=1;i--)
    {
    for(j=1;j<=i;j++)
    {
        System.out.print(i);
    }
    System.out.println();
    }
}
}
